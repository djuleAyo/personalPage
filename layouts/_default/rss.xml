{{- /* Custom RSS template that outputs full content instead of summaries. */ -}}

{{- /* Collect pages for this feed. Home uses all regular pages; other list pages use their own regular pages. */ -}}
{{- $pages := .RegularPages -}}
{{- if .IsHome -}}
  {{- $pages = site.RegularPages -}}
{{- end -}}

{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if and (ge $limit 1) (le $limit (len $pages)) -}}
  {{- $pages = first $limit $pages -}}
{{- end -}}

{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ if .IsHome }}{{ site.Title }}{{ else }}{{ .Title }} Â· {{ site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ if .IsHome }}{{ with site.Params.description }}{{ . }}{{ end }}{{ else }}{{ with .Description }}{{ . }}{{ end }}{{ end }}</description>
    <generator>Hugo</generator>
    <language>{{ site.Language.Lang }}</language>
    {{- with .OutputFormats.Get "RSS" }}
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    {{- end }}
    {{- range $pages }}
    {{- /* Escape HTML for XML safety; avoids CDATA issues while keeping full content. */ -}}
    {{- $raw := .Content | htmlEscape -}}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid>{{ .Permalink }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <description>{{ $raw }}</description>
      <content:encoded>{{ $raw }}</content:encoded>
    </item>
    {{- end }}
  </channel>
</rss>
